{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",         // Ensure module resolution is set to node
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
